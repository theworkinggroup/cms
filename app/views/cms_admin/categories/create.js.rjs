if @category.valid?
  if @category.parent.blank?
    page.insert_html :bottom, 'root_categories', :partial => 'category', :locals => { :category => @category, :item_type => params[:item_type] }
  else
    page.insert_html :bottom, dom_id(@category.parent), :partial => 'category', :locals => { :category => @category, :item_type => params[:item_type] }
  end
end
page.replace 'new_category', render(:partial => 'cms_admin/categories/new', :locals => {:item_type => params[:item_type]})