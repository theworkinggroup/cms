if @category.valid?
  if @category.parent.blank?
    page.insert_html :bottom, 'root_categories', :partial => 'cms_admin/attachments/category', :locals => { :category => @category, :attachment => nil }
  else
    page.insert_html :bottom, dom_id(@category.parent), :partial => 'cms_admin/attachments/category', :locals => { :category => @category, :attachment => nil }
  end
end
page.replace_html 'new_category', render(:partial => 'cms_admin/categories/new')