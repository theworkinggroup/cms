= form.error_messages

.form_element.text.large
  .label= form.label :label, 'Title'
  .field= form.text_field :label

.form_element.select
  .label= form.label :parent_id, 'Parent Layout'
  .field= form.select :parent_id, @layout.extendable_for_select
  
.form_element
  .label= form.label :app_layout, 'Application Layout'
  .field= form.select :app_layout, CmsLayout.app_layouts_for_select

.form_element.text_area
  .label= form.label :content, 'Content'
  .field= form.text_area :content
  
.help
  %h3 Content block definitions:
  %ul
    %strong {{ cms_block:block_name:block_type }}
  %ul
    %li
      %em cms_block
      &ndash; predefined keyword
    %li
      %em block_name
      &ndash; any arbitrary name you want.
      %strong left_column
      is a good start. If you want to nest layouts make sure that parent layout has {{ cms_block:default:text }} block
    %li
      %em block_type
      &ndash; this is the type of the block. It may be 
      %strong text
      or
      %strong string
      for the time being
    