.right_column
.center_column
  %h2= @cms_layout.new_record? ? "New Layout" : "Editing \"#{@cms_layout.label}\""
  = render :partial => 'cms_admin/flash_message'
  = f.error_messages
  .form_left_column
    .form_element_group.horizontal
      .form_element.text.large
        .label= f.label :label, 'Title'
        .field= f.text_field :label

      .form_element.select
        .label= f.label :parent_id, 'Parent Layout'
        .field= f.select :parent_id, @cms_layout.extendable_for_select

  
      .form_element
        .label= f.label :app_layout, 'App Layout'
        .field= f.select :app_layout, CmsLayout.app_layouts_for_select

      .form_element.text_area
        .label= f.label :content, 'Content'
        .field= f.text_area :content
  .submit
    = f.submit 'Save All Changes'
    or 
    = link_to 'Return to List', cms_admin_layouts_path