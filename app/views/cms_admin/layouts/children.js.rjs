case params[:state]
when 'closed'
  page.replace "layout_#{@cms_layout.id}_link", :partial => 'toggle_link', :object => @cms_layout, :locals => { :state => 'open' }
  page.replace_html "layout_#{@cms_layout.id}_children", :partial => 'tree_branch', :object => @cms_layout.children
when 'open'
  page.replace "layout_#{@cms_layout.id}_link", :partial => 'toggle_link', :object => @cms_layout, :locals => { :state => 'closed' }
  page.hide "layout_#{@cms_layout.id}_children"
  page.replace_html "layout_#{@cms_layout.id}_children", ''
end

