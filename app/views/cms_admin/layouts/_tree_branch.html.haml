- container_id = tree_branch.first.try(:parent).try(:id).to_i

%ul{:id => "layout_#{container_id}_branch"}
  - tree_branch.each do |layout|
    
    %li
    
      - if layout.children.count > 0
        - if session[:cms_layout_tree].member? layout.id.to_s
          = render :partial => 'toggle_link', :object => layout, :locals => { :state => 'open' }
        - else
          = render :partial => 'toggle_link', :object => layout, :locals => { :state => 'closed' }
      
      
      .action_links
        = link_to 'Remove', cms_admin_layout_path(layout), :method => 'delete', :confirm => 'Are you sure you want to remove this layout?', :class => 'remove'
        = link_to 'Edit', edit_cms_admin_layout_path(layout), :class => 'edit'
        = link_to 'Add Child Layout', new_cms_admin_layout_path + "?parent_id=#{layout.id}", :class => 'new'
      
      
      = link_to layout.label, edit_cms_admin_layout_path(layout), :class => 'label'
      
      
      - if session[:cms_layout_tree].member? layout.id.to_s
        %div{:id => "layout_#{layout.id}_children"}
          = render :partial => 'tree_branch', :object => layout.children
      - else
        %div{:id => "layout_#{layout.id}_children", :style => 'display: none'}
